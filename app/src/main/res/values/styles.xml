<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/backgroundsplash</item>
    </style>

    <!-- Activity home -->
    <style name="image_icon">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginBottom">15dp</item>
       <item name="android:src">@drawable/qwerty_icon</item>
    </style>

    <style name="edit_text_home">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/my_button</item>
        <item name="android:ems">12</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="icon_edit_text_home">
        <item name="android:backgroundTint">#4BC6C5C5</item>
        <item name="android:background">@drawable/my_button</item>
        <item name="android:layout_height">53dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="text_home_to_help_parole">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:clickable">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="button_home">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/my_button</item>
        <item name="android:textColor">@color/button_color_home</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Activityregistration -->

    <style name="edit_text_registration" parent="edit_text_home">
        <item name="android:padding">13dp</item>
    </style>
</resources>